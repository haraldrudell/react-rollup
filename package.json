{
  "name": "react-rollup",
  "version": "0.0.6",
  "description": "Build react app using Rollup by Harald Rudell",
  "author": "Harald Rudell <harald.rudell@gmail.com> (http://haraldrudell.com)",
  "license": "ISC",
  "scripts": {
    "build": "npm-run-all --serial 'build:*' ",
    "build:eslint": "eslint src/rollup.config.js src/reactrollup/rollup.config.js",
    "build:bin": "rollup --config src/rollup.config.js",
    "build:rollup": "rollup --config node:es2049package",
    "reinstall": "npm-run-all --serial reinstall:*",
    "reinstall:clean": "rimraf node_modules",
    "reinstall:install": "yarn",
    "testfsinstall": "jest --testRegex 'src/.*xtest.*'",
    "testnpminstall": "jest --testRegex 'src/.*itest.*'",
    "pub": "yarn publish --patch --access public",
    "test": "jest"
  },
  "bin": {
    "react-rollup": "bin/react-rollup"
  },
  "keywords": [
    "Create React App",
    "React",
    "Component",
    "Library",
    "lib",
    "rollup"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/haraldrudell/react-rollup"
  },
  "rollup": {
    "input": "src/reactrollup/rollup.config.js",
    "output": {
      "file": "bin/rollup.config.js",
      "format": "esm"
    }
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": true
              }
            }
          ]
        ]
      }
    }
  },
  "devDependencies": {
    "@babel/register": "^7.0.0",
    "es2049package": "^1.0.1",
    "fs-extra": "^7.0.1",
    "npm-run-all": "^4.1.3",
    "rollup-plugin-thatworks": "^0.0.1"
  },
  "dependencies": {
    "@babel/core": "7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-decorators": "^7.1.6",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-flow-strip-types": "^7.1.6",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/runtime": "^7.1.5",
    "allspawn": "^1.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "9",
    "babel-jest": "^23.6.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-macros": "^2.4.2",
    "babel-plugin-named-asset-import": "^0.2.3",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.20",
    "eslint": "5",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-flowtype": "2",
    "eslint-plugin-import": "2",
    "eslint-plugin-jsx-a11y": "6",
    "eslint-plugin-react": "7",
    "jest": "23.6.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-preset-env": "^6.4.0",
    "react-dev-utils": "^6.1.1",
    "rollup": "^0.67.3",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-eslint": "^5.0.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-postcss": "^1.6.3",
    "rollup-plugin-svg": "^1.0.1"
  },
  "files": [
    "bin",
    "src/react/rollup.config.js",
    "src/letsroll",
    "src/libifier"
  ]
}
